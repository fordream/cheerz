<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <z.lib.com.aretha.slidemenu.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/dimen_270dp"
            android:layout_height="match_parent"
            slidemenu:layout_role="primaryMenu" >

            <com.acv.cheerz.view.MenuLeftView
                android:id="@+id/menuleft"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            slidemenu:layout_role="content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TabHost
                android:id="@android:id/tabhost"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        
                        android:layout_below="@android:id/tabs" />

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="0px" />
                </RelativeLayout>
            </TabHost>
        </FrameLayout>
<!-- 
        <FrameLayout
            xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/dimen_270dp"
            android:layout_height="match_parent"
            slidemenu:layout_role="secondaryMenu"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:scaleType="center"
            android:id="@+id/layout_main_id"
             >
        </FrameLayout>
         -->
    </z.lib.com.aretha.slidemenu.SlideMenu>

</RelativeLayout>