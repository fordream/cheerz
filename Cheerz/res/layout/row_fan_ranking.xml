<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    

    <TextView 
        android:id="@+id/row_fr_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/Black"
        android:textSize="@dimen/text_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />
    <com.acv.cheerz.view.RoundImageView 
        android:id="@+id/row_fr_iconfan_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/row_fr_id"
        android:layout_marginLeft="20dp"
        android:src="@drawable/artist_temp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/row_fr_iconfan_id"
        android:layout_marginLeft="15dp"
        >
        <TextView 
            android:id="@+id/row_fr_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bb328a"
            android:text="Name"
            android:textSize="@dimen/title_size"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/icon_hear_green"
                />
            <TextView 
                android:id="@+id/row_fr_totalvote_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/green"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:id="@+id/row_fr_icontop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:src="@drawable/icon_top_fan"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />
    
</RelativeLayout>



