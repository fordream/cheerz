<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_item_bot_img_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65dp"
        android:padding="@dimen/dimen_5dp" >

        <com.acv.cheerz.view.BaseTextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:text="はるはてのう"
            android:textColor="#cc3399"
            android:textSize="@dimen/dimen_15dp" />

        <LinearLayout
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/imageView_1"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@drawable/setting_arrow" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/dimen_38dp"
                android:layout_height="@dimen/dimen_19dp"
                android:background="@drawable/noti_on_off"
                android:button="@drawable/transfer"
                android:focusable="false"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/menu_space"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/space_setting" />

</LinearLayout>